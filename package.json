{
  "name": "dm-hero-monorepo",
  "version": "1.0.0-alpha.7",
  "private": true,
  "description": "DM Hero Monorepo - Campaign management tool for Dungeon Masters",
  "scripts": {
    "dev": "pnpm --filter @dm-hero/app dev",
    "dev:electron": "pnpm --filter @dm-hero/app dev:electron",
    "build": "pnpm --filter @dm-hero/app build",
    "build:landing": "pnpm --filter @dm-hero/landing build",
    "lint": "pnpm -r lint",
    "test": "pnpm --filter @dm-hero/app test",
    "db:reset": "pnpm --filter @dm-hero/app db:reset",
    "electron:build": "pnpm --filter @dm-hero/app electron:build",
    "electron:rebuild": "pnpm --filter @dm-hero/app electron:rebuild"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
